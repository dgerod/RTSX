// display.sci   display data
// www.controlsystemslab.com  Sep 2012

function display(a)
    if isquaternion(a) then
        s = q2str(a);  // convert to string first
        ns = size(s,1); 
        if ns==1 then
            printf(s);
        else
           for i = 1:size(s,1)
               printf("%d -- %s",) 
           end
        
    end
endfunction
